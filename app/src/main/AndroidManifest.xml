<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mufiid.pilwali2020">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_pemilu"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_pemilu_circle"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme"
        tools:targetApi="m">
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.mufiid.pilwali2020.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_path">
            </meta-data>
        </provider>
        <activity android:name="com.mufiid.pilwali2020.ui.addvote.AddVoteActivity"
            android:parentActivityName="com.mufiid.pilwali2020.ui.pilwali.PilwaliActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mufiid.pilwali2020.ui.pilwali.PilwaliActivity">
            </meta-data>
        </activity>
        <activity
            android:name="com.mufiid.pilwali2020.ui.monitoring.MonitoringActivity"
            android:parentActivityName="com.mufiid.pilwali2020.ui.main.BerandaActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.main.BerandaActivity">
            </meta-data>
        </activity>
        <activity
            android:name="com.mufiid.pilwali2020.ui.editprofile.EditProfileActivity"
            android:parentActivityName="com.mufiid.pilwali2020.ui.main.BerandaActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.main.BerandaActivity">
            </meta-data>
        </activity>
        <activity
            android:name="com.mufiid.pilwali2020.ui.tps.TpsActivity"
            android:parentActivityName="com.mufiid.pilwali2020.ui.main.BerandaActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.main.BerandaActivity">
            </meta-data>
        </activity>
        <activity
            android:name="com.mufiid.pilwali2020.ui.pilwali.PilwaliActivity"
            android:parentActivityName="com.mufiid.pilwali2020.ui.main.BerandaActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.main.BerandaActivity">
            </meta-data>
        </activity>
        <activity
            android:name="com.mufiid.pilwali2020.ui.main.BerandaActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"/>
        <activity
            android:name="com.mufiid.pilwali2020.ui.login.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mufiid.pilwali2020.ui.splash.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- The below code is for android OS version below N -->
        <receiver
            android:name=".utils.helpers.ConnectivityReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"
                    tools:ignore="BatteryLife" />
            </intent-filter>
        </receiver>
    </application>

</manifest>